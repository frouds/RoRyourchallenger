<div class="container yc-ui" id="setting">
  <div class="row">
    <div class="col-md-4 row-left">
      <%= render partial: "user_profile" %>
      <%= render partial: "setting_list", locals: { setting_item: "profile" } %>
    </div>
    <div class="col-md-8 row-right">
      <div class="content-heading">
        <h3>Profile</h3>
      </div>
      <div class="setting-content">
        <%= form_tag({ controller: "accounts", action: "update_profile"}, class: "form-horizontal", role: "form", method: "post", multipart: true) do %>
            <%= render partial: "flash_msg" %>
            <div class="form-group">
              <label class="col-sm-3 control-label">Photo</label>
              <div class="col-xs-5">
                <div class="cell">
                  <%= image_tag(current_user.avatar.url(:thumb), class: "avatar", id: "img_avatar") %>
                </div>
                <div class="cell">
                    <a id="change_avatar">Change Photo</a>
                    <input type="file" id="input_avatar" name="avatar" multiple="false" accetp="image/*" class="hidden"/>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-10">
                <button type="submit" class="btn btn-primary">Save Changes</button>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>