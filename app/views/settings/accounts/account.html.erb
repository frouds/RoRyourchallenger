<div class="container yc-ui" id="setting">
  <div class="row">
    <div class="col-md-4 row-left">
      <%= render partial: "user_profile" %>
      <%= render partial: "setting_list", locals: { setting_item: "account" } %>
    </div>
    <div class="col-md-8 row-right">
        <div class="content-heading">
          <h3>Account</h3>
        </div>
        <div class="setting-content">
          <%= form_tag({ controller: "accounts", action: "update_account"}, class: "form-horizontal", role: "form", method: "post") do %>
            <div class="form-group">
              <label class="col-sm-2 control-label">Name</label>
              <div class="col-xs-5">
                <input type="text" class="form-control" id="inputRealname" name="user[name]" placeholder="First Name  Last Name" value="<%= current_user.name %>">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Username</label>
              <div class="col-xs-5">
                <input type="text" class="form-control" id="inputUsername" name="user[username]" placeholder="Username" value="<%= current_user.username %>">
                <div class="form-info">
                    <span class="info" id="username-path">https://yourchallenger.com/xuchuzhang</span>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Email</label>
              <div class="col-xs-5">
                <input type="email" class="form-control" id="inputEmail" name="user[email]" placeholder="Email" value="<%= current_user.email %>" >
              </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                 </div>
            </div>
          <% end %>
        </div>
    </div>
   </div>
</div>