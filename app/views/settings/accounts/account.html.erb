<div class="container yc-ui" id="setting">
  <div class="row">
    <div class="col-md-4 row-left">
      <%= render partial: "user_profile" %>
      <%= render partial: "setting_list", locals: { setting_item: "account" } %>
    </div>
    <div class="col-md-8 row-right">
        <div class="content-heading">
          <h3>Account</h3>
        </div>
        <div class="setting-content">
          <%= form_tag({ controller: "accounts", action: "update_account"}, class: "form-horizontal", role: "form", method: "post") do %>
            <%= render partial: "flash_msg" %>
            <div class="form-group">
              <label class="col-sm-3 control-label">Name</label>
              <div class="col-xs-6">
                <input class="form-control" name="name" placeholder="Name" type="text" value="<%= current_user.name %>">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Username</label>
              <div class="col-xs-6">
                <input class="form-control"  name="username" placeholder="Userame" type="text" value="<%= current_user.username %>">
                <div class="form-info">
                    <span id="username-path">https://yourchallenger.com/xuchuzhang</span>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Email</label>
              <div class="col-xs-6">
                <input class="form-control"  name="email" placeholder="Email" type="email" value="<%= current_user.email %>">
              </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-10">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                 </div>
            </div>
          <% end %>
        </div>
    </div>
   </div>
</div>